
<div class = "bootstrap-padding">
  <div class = "wrapper-skinny">

      <div id = "form">
        <% provide(:title, "Login") %>
        <h1 align="center">ログイン</h1>

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_for(:session, url: login_path) do |f| %>

              <div class="field">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
      

              <div class="field">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :remember_me, class: "checkboxinline" do %>
                  <span>Remember me on this computer</span><%= f.check_box :remember_me %>
                <% end %>
              </div>            

              <%= f.submit "Log in", class: "button button_color button_center" %>
            <% end %>

          <hr class = "line-form">

            <div class = "action">
              <p>アカウントをお持ちでない方は<%= link_to "こちら", signup_path %></p>
              パスワードをお忘れの方は<%= link_to "こちら", new_password_reset_path %>
            </div>

          </div> <!-- col -->
        </div> <!-- row -->
      </div> <!-- form -->

  </div>
</div>