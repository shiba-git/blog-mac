
<div class = "bootstrap-padding">
  <div class = "wrapper-skinny">

    <% provide(:title, 'Signup') %>
    <h1 align="center">新規登録</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
  
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <%= f.submit "Create", class: "button button_color button_center" %>
        <% end %>

        <hr class = "line-form">

        <div class = "action">
              <p>アカウントをお持ちの方は<%= link_to "ログインへ", login_path %></p>
        </div>
      </div>
    </div>

  </div>
</div>